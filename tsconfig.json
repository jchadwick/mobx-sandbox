{
    "compilerOptions": {
      "baseUrl": "./src",
      "allowSyntheticDefaultImports": true,
      "jsx": "react",
      "module": "commonjs",
      "noImplicitAny": false,
      "outDir": "./build/",
      "preserveConstEnums": true,
      "experimentalDecorators": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "es2015"
    },
    "include": [
      "./src/**/*"
    ]
  }